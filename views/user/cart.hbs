                    </td>
                    <td>₹ {{pro_id.price}}</td>
                    <td>
                      <div class="input-group mb-3" style="min-width: 100px; max-width:120px;">
                        <div class="input-group-prepend">
                          <button class="btn btn-outline-primary js-btn-minus" onclick="changeQuantity('{{this._id}}','{{pro_id._id}}','{{this.quantity}}',-1)">&minus;</button>
                        </div>
                        <input type="text" class="form-control text-center" name="num-product1" value="{{this.quantity}}" aria-label="Example text with button addon" aria-describedby="button-addon1">
                        <div class="input-group-append">
                          <button class="btn btn-outline-primary js-btn-plus" onclick="changeQuantity('{{this._id}}','{{pro_id._id}}','{{this.quantity}}',1)">&plus;</button>
                        </div>
                      </div>

                    </td>
                    <td>₹ {{this.subtotal}}</td>
                    <td><button onclick="removeProductforcart('{{this._id}}')">  <i class="bi bi-trash"></i> </button></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </form>
