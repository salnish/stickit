    <a href="/" class="btn btn-primary">continue shopping</a>
  </div>
</div>

		</div>
</section>
	{{/if}}


    <script>
        function removeProductforwishlist(cartId) {
          $.ajax({
            url: "/deletewishlist",
            data: {
              cart: cartId,
            },
            method: "post",
            success: (Response) => {
              if (Response) {
                alert('product removed from cart')
                location.reload()
              }
            }
          })
        }



           function addTocart(proId){
        $.ajax({
        url: '/add-tocart/' + proId, 
        method: 'get',
        success: (response) => {
            if (response.status) {
                alert(response)
                location.reload();
            }
        }
    })}
      </script>